<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
    <div class="navbar-lewagon-white-a">
      <%= image_tag ("logo-white.PNG"), class: "logo", id: "logo" %>
    </div>
    <% end %>


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <div class="navbar-lewagon-white-a">
          <li class="nav-item active">
            <%= link_to "About", "#", class: "nav-link" %>
          </li>
        </div>
        <div class="navbar-lewagon-white-a">
          <li class="nav-item active">
            <%= link_to "Procedures", procedures_path, class: "nav-link" %>
          </li>
        </div>
        <div class="navbar-lewagon-white-a">
          <li class="nav-item active">
            <%= link_to "Lawfirms", lawfirms_path, class: "nav-link" %>
          </li>
        </div>
        <% if user_signed_in? %>
        <div class="navbar-lewagon-white-a">
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
        </div>

          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier",class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <div class="navbar-lewagon-white-a">
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          </div>
        <% end %>

      </ul>
    </div>
  </div>
</div>
